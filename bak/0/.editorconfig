root = true

# Global settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files: 2-space indentation
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TypeScript files: 4-space indentation
[*.{ts,tsx}]
indent_style = space
indent_size = 4
