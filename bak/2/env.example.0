# MindField Kubernetes Migration Environment Variables
# Copy this to .env and fill in your values

# Project name
NAME=mindfield

# Domain configuration
DOMAIN=aldous.info
EMAIL=admin@aldous.info

# Database passwords (generate with: pwgen -s -c -n 16 1)
POSTGRES_PASSWORD=
KC_DB_PASSWORD=
KC_BOOTSTRAP_ADMIN_PASSWORD=
TEMPORAL_DB_PASSWORD=
TEMPORAL_VIS_DB_PASSWORD=
GRAFANA_DEFAULT_PASSWORD=

# Backup configuration
BACKUP_BUCKET=mindfield-backups
AWS_REGION=us-east-1
MINIO_ENDPOINT=http://minio.storage.svc.cluster.local:9000

# GitOps configuration
GITHUB_USER=
GITHUB_REPO=mindfield

# Cloudflare API token (for DNS-01 challenges)
CLOUDFLARE_API_TOKEN=